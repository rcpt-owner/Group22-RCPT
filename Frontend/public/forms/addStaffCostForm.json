{
  "formId": "add-staff-cost-form",
  "submitLabel": "Save",
  "layout": {
    "rows": [
      ["role"],
      ["employmentClassification", "fteType"],
      ["employmentType", "category"],
      ["__dynamic_years__"]
    ]
  },
  "fields": [
    { "name": "role", "type": "text", "label": "Role *", "placeholder": "Name of the role", "validation": { "required": true }, "message": "E.g. Senior Tutor, Lecturer" },
    {
      "name": "employmentType",
      "type": "select",
      "label": "Employment Type",
      "placeholder": "Select the correct employment type",
      "options": [
        { "value": "continuing", "label": "Continuing" },
        { "value": "fixed-term", "label": "Fixed-term" },
        { "value": "casual", "label": "Casual" }
      ]
    },
    {
      "name": "category",
      "type": "select",
      "label": "Category",
      "placeholder": "Select the correct category of this role",
      "options": [
        { "value": "academic", "label": "Academic" },
        { "value": "professional", "label": "Professional" },
        { "value": "technical", "label": "Technical" },
        { "value": "other", "label": "Other" }
      ]
    },
    {
      "name": "employmentClassification",
      "type": "select",
      "label": "Employment Classification",
      "placeholder": "Select the correct employment classification",
      "dependsOn": "category",
      "disableUntilParent": true,
      "clearOnParentChange": true,
      "placeholderWhenDisabled": "Select category first",
      "optionsMap": {
        "professional": "/api/lookups/classification_professional.json",
        "academic": "/api/lookups/classification_academic.json",
        "technical": [],
        "other": []
      }
    },
    {
      "name": "fteType",
      "type": "select",
      "label": "FTE / Daily / Hourly",
      "placeholder": "Select the correct time of payment",
      "dependsOn": "employmentType",
      "disableUntilParent": true,
      "clearOnParentChange": true,
      "placeholderWhenDisabled": "Select employment type first",
      "optionsMap": {
        "continuing": [
          { "value": "fte", "label": "FTE" }
        ],
        "fixed-term": [
          { "value": "fte", "label": "FTE" },
          { "value": "daily", "label": "Daily" }
        ],
        "casual": [
          { "value": "hourly", "label": "Hourly" }
        ]
      }
    },
    {
      "name": "years",
      "type": "dynamic_years",
      "label": "Yearly Amounts",
      "dependsOn": "fteType",
      "disableUntilParent": true,
      "clearOnParentChange": true,
      "conditionalValidation": {
        "fte": { "min": 0, "max": 1, "message": "For FTE the value must be between 0 and 1." },
        "daily": { "min": 0, "message": "For Daily/Hourly the value must be 0 or greater." },
        "hourly": { "min": 0, "message": "For Daily/Hourly the value must be 0 or greater." }
      }
    }
  ]
}
