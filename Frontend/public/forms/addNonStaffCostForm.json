          { "value": "Other Expert Services", "label": "Other Expert Services" }
        ],
        "Other consumable service": [
          { "value": "Open Access Fees", "label": "Open Access Fees" },
          { "value": "Professional Memberships and Subscriptions", "label": "Professional Memberships and Subscriptions" }
        ],
        "PhD Stipends": [
          { "value": "Other Student Support (includes PhD Stipends/grants)", "label": "Other Student Support (includes PhD Stipends/grants)" }
        ],
        "Shared Grant Payments": [
          { "value": "Contributions to HEPS", "label": "Contributions to HEPS" }
        ],
        "Travel and entertainment": [
          { "value": "Entertainment and Catering", "label": "Entertainment and Catering" },
          { "value": "Travel, Staff Development, and Conference Expense", "label": "Travel, Staff Development, and Conference Expense" }
        ]
      }
    },
    { "name": "description", "type": "text", "label": "Description", "placeholder": "Describe this cost (optional)" },
    {
      "name": "years",
      "type": "dynamic_years",
      "label": "Yearly Amounts"
    },
    { "name": "inKind", "type": "checkbox", "label": "In Kind?", "default": false }
  ]
}
