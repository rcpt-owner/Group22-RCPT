{
  "formId": "add-nonstaff-cost-form",
  "submitLabel": "Save",
  "layout": {
    "rows": [
      ["category", "subcategory"],
      ["description"],
      ["__dynamic_years__"],
      ["inKind"]
    ]
  },
  "fields": [
    {
      "name": "category",
      "type": "select",
      "label": "Cost Category *",
      "placeholder": "Select category",
      "validation": { "required": true },
      "options": [
        { "value": "Advertising and marketing", "label": "Advertising and marketing" },
        { "value": "Consumable Goods and Supplies", "label": "Consumable Goods and Supplies" },
        { "value": "Data Management", "label": "Data Management" },
        { "value": "Equipment and maintenance and utilities", "label": "Equipment and maintenance and utilities" },
        { "value": "Expert Services and Consultants and Contractors", "label": "Expert Services and Consultants and Contractors" },
        { "value": "Other consumable service", "label": "Other consumable service" },
        { "value": "PhD Stipends", "label": "PhD Stipends" },
        { "value": "Shared Grant Payments", "label": "Shared Grant Payments" },
        { "value": "Travel and entertainment", "label": "Travel and entertainment" }
      ]
    },
    {
      "name": "subcategory",
      "type": "select",
      "label": "Cost Subcategory *",
      "placeholder": "Select subcategory",
      "validation": { "required": true },
      "dependsOn": "category",
      "disableUntilParent": true,
      "clearOnParentChange": true,
      "placeholderWhenDisabled": "Select category first",
      "optionsMap": {
        "Advertising and marketing": [
          { "value": "Advertising, Marketing and Promotional Expenses", "label": "Advertising, Marketing and Promotional Expenses" }
        ],
        "Consumable Goods and Supplies": [
          { "value": "Consumable Goods", "label": "Consumable Goods" },
          { "value": "Library", "label": "Library" }
        ],
        "Data Management": [
          { "value": "Computer Software and Services", "label": "Computer Software and Services" },
          { "value": "Computer Software and Services (includes Research Data Management and Software Services)", "label": "Computer Software and Services (includes Research Data Management and Software Services)" }
        ],
        "Equipment and maintenance and utilities": [
          { "value": "Major assets and equipment (>$10,000)/infrastructure costs", "label": "Major assets and equipment (>$10,000)/infrastructure costs" },
          { "value": "Minor Assets and Equipment (Asset < $10,000) Non-Capitalised Equipment", "label": "Minor Assets and Equipment (Asset < $10,000) Non-Capitalised Equipment" },
          { "value": "Rental and Hire", "label": "Rental and Hire" },
          { "value": "Repairs and Maintenance", "label": "Repairs and Maintenance" },
          { "value": "Utilities and Services", "label": "Utilities and Services" }
        ],
        "Expert Services and Consultants and Contractors": [
          { "value": "Consultants", "label": "Consultants" },
          { "value": "Contracted and Temporary Labour", "label": "Contracted and Temporary Labour" },
